  "categories": {
    "properties": {
      "name": "Properties Management",
      "description": "Tools for managing properties in Channex",
      "tools": [
        {
          "name": "channex_list_properties",
          "description": "List all properties with filtering and pagination support",
          "examples": [
            {
              "description": "List all active properties",
              "input": {
                "filter": {
                  "is_active": true
                }
              }
            },
            {
              "description": "Get properties by page",
              "input": {
                "page": 1,
                "limit": 10
              }
            }
          ],
          "parameters": {
            "page": {
              "type": "number",
              "description": "Page number for pagination",
              "required": false
            },
            "limit": {
              "type": "number",
              "description": "Number of items per page",
              "required": false
            },
            "filter": {
              "type": "object",
              "description": "Filter properties by various criteria",
              "required": false,
              "properties": {
                "id": "Property ID",
                "title": "Property title",
                "is_active": "Active status"
              }
            },
            "fields": {
              "type": "array",
              "description": "Specify which fields to include in the response",
              "required": false,
              "example": ["id", "title", "currency"]
            }
          }
        },
        {
          "name": "channex_get_property",
          "description": "Get a specific property by ID",
          "examples": [
            {
              "description": "Get property details",
              "input": {
                "property_id": "123e4567-e89b-12d3-a456-426614174000"
              }
            }
          ],
          "parameters": {
            "property_id": {
              "type": "string",
              "description": "The ID of the property",
              "required": true
            }
          }
        },
        {
          "name": "channex_create_property",
          "description": "Create a new property",
          "examples": [
            {
              "description": "Create a basic property",
              "input": {
                "title": "Beach Resort Hotel",
                "currency": "USD",
                "email": "contact@beachresort.com",
                "phone": "+1234567890",
                "zip": "12345",
                "country": "US",
                "state": "FL",
                "city": "Miami",
                "address": "123 Beach Street"
              }
            }
